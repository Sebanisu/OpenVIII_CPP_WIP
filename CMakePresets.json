{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "environment": {
        "NUGET_CLI_LANGUAGE": "en-us",
        "VCPKG_ROOT": "${sourceDir}/vcpkg",
        "VCPKG_BINARY_SOURCES": "clear;nuget,github,readwrite;default,readwrite"
      },
      "binaryDir": "${sourceDir}/.build",
      "installDir": "${sourceDir}/.install",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    },

    {
      "name": "linux-base",
      "hidden": true,
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },

    {
      "name": "windows-base",
      "hidden": true,
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-static"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": "Windows",
          "intelliSenseMode": "windows-msvc-x64"
        }
      }
    },

    {
      "name": "Release-linux",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Debug-linux",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "RelWithDebInfo-linux",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "MinSizeRel-linux",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel"
      }
    },

    {
      "name": "Release-windows",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Debug-windows",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "RelWithDebInfo-windows",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "MinSizeRel-windows",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "Release-linux",
      "configurePreset": "Release-linux"
    },
    {
      "name": "Debug-linux",
      "configurePreset": "Debug-linux"
    },
    {
      "name": "RelWithDebInfo-linux",
      "configurePreset": "RelWithDebInfo-linux"
    },
    {
      "name": "MinSizeRel-linux",
      "configurePreset": "MinSizeRel-linux"
    },

    {
      "name": "Release-windows",
      "configurePreset": "Release-windows"
    },
    {
      "name": "Debug-windows",
      "configurePreset": "Debug-windows"
    },
    {
      "name": "RelWithDebInfo-windows",
      "configurePreset": "RelWithDebInfo-windows"
    },
    {
      "name": "MinSizeRel-windows",
      "configurePreset": "MinSizeRel-windows"
    }
  ]
}